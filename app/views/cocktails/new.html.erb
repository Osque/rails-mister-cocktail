<h1 class="text-center">Cocktails</h1>
<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, class: "btn btn-success btn-sm" %>
      <%= f.button :submit, class: "btn btn-primary btn-lg"%>
      <% end %>
    </div>
  </div>
</div>
